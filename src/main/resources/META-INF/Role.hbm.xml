<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.emp.mgmt.persistence.Role" table="role">
		<meta attribute="class-description"> This class contains employee's role details. </meta>
		<id name="deptID" type="integer" column="deptID">
			<generator class="native" />
		</id>
		<property name="deptName" type="string" column="deptName" not-null="true" />
	</class>
</hibernate-mapping>